<script>
// ğŸ”Š Enable sound on first click
document.body.addEventListener("click", () => {
    const song = document.getElementById("song");
    song.muted = false;
    song.play();
}, { once: true });

// ğŸ’• Floating emojis
const emojis = ["ğŸ’•","ğŸ’–","ğŸˆ","âœ¨","ğŸ‰"];

function createFloat() {
    const el = document.createElement("div");
    el.className = "float";
    el.innerText = emojis[Math.floor(Math.random() * emojis.length)];
    el.style.left = Math.random() * 100 + "vw";
    el.style.animationDuration = (6 + Math.random() * 6) + "s";
    document.body.appendChild(el);
    setTimeout(() => el.remove(), 12000);
}
setInterval(createFloat, 500);

// ğŸˆ Flying balloons
function createBalloon() {
    const b = document.createElement("div");
    b.className = "balloon";
    b.style.left = Math.random() * 100 + "vw";
    b.style.animationDuration = (10 + Math.random() * 6) + "s";
    b.style.background = `radial-gradient(circle at 30% 30%, #fff,
        hsl(${Math.random()*360},80%,60%))`;
    document.body.appendChild(b);
    setTimeout(() => b.remove(), 16000);
}
setInterval(createBalloon, 1200);

// ğŸ† Fireworks burst
function fireworkBurst() {
    const x = Math.random() * window.innerWidth;
    const y = Math.random() * window.innerHeight / 2;

    for (let i = 0; i < 30; i++) {
        const p = document.createElement("div");
        p.className = "firework";
        p.style.left = x + "px";
        p.style.top = y + "px";
        p.style.background = `hsl(${Math.random()*360},100%,60%)`;

        const angle = Math.random() * 2 * Math.PI;
        const distance = Math.random() * 120;
        p.style.setProperty("--x", Math.cos(angle)*distance + "px");
        p.style.setProperty("--y", Math.sin(angle)*distance + "px");

        document.body.appendChild(p);
        setTimeout(() => p.remove(), 1500);
    }
}
setInterval(fireworkBurst, 2000);
</script>

